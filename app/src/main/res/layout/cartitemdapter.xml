<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kadaiclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp">

            <ImageView
                android:id="@+id/payimages"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:background="@drawable/outline"
                android:scaleType="centerCrop"
                android:src="@drawable/index" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/payname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans"
            android:text="Chicken Gravy"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/itemcou"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/backone"
            android:fontFamily="@font/open_sans"
            android:text="4 items"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/payname"
            app:layout_constraintTop_toBottomOf="@+id/payname"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/open_sans"
            android:text="x"
            android:textColor="@color/apple"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemcou"
            app:layout_constraintStart_toEndOf="@+id/itemcou"
            app:layout_constraintTop_toTopOf="@+id/itemcou"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/itemprice"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/backone"
            android:fontFamily="@font/open_sans"
            android:text="300 ₹"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemcou"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/itemcou"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/open_sans"
            android:text="="
            android:textColor="@color/apple"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemprice"
            app:layout_constraintStart_toEndOf="@+id/itemprice"
            app:layout_constraintTop_toTopOf="@+id/itemprice"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/itemtotal"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/backone"
            android:fontFamily="@font/open_sans"
            android:text="1200 ₹"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemprice"
            app:layout_constraintStart_toEndOf="@+id/textView25"
            app:layout_constraintTop_toTopOf="@+id/itemprice"
            android:layout_marginLeft="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>